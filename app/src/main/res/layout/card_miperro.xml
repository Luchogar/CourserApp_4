<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_viwe="http://schemas.android.com/apk/res-auto"
    android:layout_width="130dp"
    android:layout_height="wrap_content"
    card_viwe:cardCornerRadius="@dimen/corner_radius"
    android:layout_marginBottom="@dimen/activity_vertical_margin"
    android:id="@+id/cvMiPerro"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <ImageView
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:id="@+id/imgMiPerro"
            android:src="@drawable/perro12"
            android:scaleType="centerCrop"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:id="@+id/tvLikesMP"
                android:textSize="@dimen/nom_perro"
                android:textStyle="bold"
                android:gravity="center"

                android:text="@string/likes"
                />

            <ImageView
                android:layout_width="@dimen/bonew"
                android:layout_height="@dimen/bonew"
                android:id="@+id/imgBoneC"
                android:scaleType="centerCrop"
                android:src="@drawable/bonec"
                android:layout_alignParentRight="true"

                />

        </RelativeLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>
